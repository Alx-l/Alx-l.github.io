{
  "name": "bubbly-boilerplate",
  "version": "1.1.0",
  "description": "A bubbly boilerplate",
  "main": "index.js",
  "scripts": {
    "create-app": "mkdir public && mkdir public/css && touch public/css/pre-bundle.css && mkdir public/js && npm run move-files && webpack --config conf/webpack.config.dev.js",
    "start": "npm run move-files && node server.js",
    "watch": "concurrently --raw --kill-others 'npm run start' 'npm run styles-dev' 'webpack -w --inline --config conf/webpack.config.dev.js' 'npm run browsersync'",
    "browsersync": "browser-sync start --config ./conf/bs-config.js",
    "styles-dev": "concurrently 'stylus -w --use ./node_modules/bubbly-grid-stylus --use ./node_modules/rupture stylesheets/style.styl -o public/css/pre-bundle.css' 'postcss --config ./conf/postcss.dev.json'",
    "styles-prod": "stylus --use ./node_modules/bubbly-grid-stylus --use ./node_modules/rupture stylesheets/style.styl -o public/css/pre-bundle.css && postcss --config ./conf/postcss.prod.json",
    "build": "npm run styles-prod && NODE_ENV=production webpack --config conf/webpack.config.prod.js",
    "build-ftp": "npm run html-build && npm run styles-prod && NODE_ENV=production webpack --config conf/webpack.config.prod.js",
    "move-files": "cp -r ./fonts ./images ./public",
    "html-build": "jade jade/views/*.jade --out public"
  },
  "author": "Alex L",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.11.0",
    "express": "^4.13.3",
    "jade": "^1.11.0"
  },
  "devDependencies": {
    "abyssa": "^8.0.3",
    "animejs": "^2.0.0",
    "babel": "^6.5.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.6.0",
    "bubbly-grid-stylus": "^1.3.3",
    "classnames": "^2.2.5",
    "concurrently": "^2.1.0",
    "css-mqpacker": "^4.0.0",
    "cssnano": "^3.3.1",
    "eslint": "^3.15.0",
    "eslint-plugin-react": "^5.0.1",
    "fluxx": "^0.14.14",
    "immupdate": "^1.0.0",
    "postcss": "^5.2.5",
    "postcss-cli": "^2.6.0",
    "postcss-pxtorem": "^3.3.1",
    "react": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "rucksack-css": "^0.8.5",
    "rupture": "^0.6.1",
    "stylint": "^1.5.9",
    "stylus": "0.54.5",
    "webpack": "^1.12.14"
  }
}
