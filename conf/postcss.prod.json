{
  "use": ["rucksack-css", "postcss-pxtorem", "css-mqpacker", "cssnano"],
  "input": "public/css/pre-bundle.css",
  "output": "public/css/bundle.css",
  "watch": false,
  "local-plugins": true,
  "postcss-pxtorem": {
    "rootValue": 16,
    "unitPrecision": 5,
    "propWhiteList": [],
    "mediaQuery": true,
    "replace": true
  },
  "css-mqpacker": {
    "sort": true
  },
  "cssnano": {
    "calc": {
    "preserve": true
    },
    "autoprefixer": {
      "add": true,
      "browsers": "last 2 versions"
    }
  }
}