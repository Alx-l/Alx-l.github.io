.ToolTips
  position: relative
  cursor: pointer
  &-hiddenText
    display: none
    position: absolute
    z-index: 2
    bottom: 110%
    left: 50%
    padding: 0.4em
    white-space: nowrap
    text-align: center
    border-radius: 2px
    background: rgba($grey-darken-2, 0.9)
    color: $white
    font-weight: 400
    transform-origin: center bottom 0px
    &.is-visible
      display: block
      animation: toolTip 0.2s cubic-bezier(0, 0, 0.2, 1) forwards
  &-text
    u-highlight()
    u-link()
