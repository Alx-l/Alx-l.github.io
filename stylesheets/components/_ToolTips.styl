.ToolTips
  position: relative
  cursor: pointer
  &-hiddenText
    position: absolute
    bottom: 110%
    left: 50%
    z-index: 2
    padding: 0.4em
    border-radius: 2px
    background: rgba($grey-darken-2, 0.9)
    color: $white
    text-align: center
    white-space: nowrap
    font-weight: 400
    transform-origin: center bottom 0px
  &-text
    u-highlight()
    u-link()
