// **********
// REACT COMPONENT
// **********


.CardReveal
  position: relative
  overflow: hidden
  border-radius: 2Px
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16),
    0 2px 10px 0 rgba(0, 0, 0, 0.12)
  font-size: $text-lg
  &-content
    padding: $spacer-regular
    background: $primary-color
    color: $white
  &-title
    margin-bottom: 0
    text-transform: uppercase
    color: $white
  &-subTitle
    display: inline-block
    margin-top: 16px
    font-style: italic
  &-footer
    overflow: hidden
    padding: 24px 16px
    border-top: 1px solid rgba($grey-darken-1, 0.5)
  &-footerText
    float: left
    width: 90%
    color: $secondary-text
    font-size: $text-regular
  &-iconContainer
    display: flex
    flex-wrap: wrap
    align-items: center
    float: right
    width: 10%
    justify-content: space-around
    > div
      cursor: pointer
  /* hidden content */
  &-reveal
    position: absolute
    top: 100%
    right: 0px
    left: 0px
    overflow-y: auto
    padding: 16px
    height: 100%
    border-radius: 2px
    background-color: #fff
    color: $primary-text


/* Alt version
–––––––––––––––––––––––––––––––––––––––––––––––––– */

.CardReveal[data-cat="jobs"]
  .CardReveal-content
    background: tint($accent-color, 50%)


/* Inside the card => <Reveal/>
–––––––––––––––––––––––––––––––––––––––––––––––––– */

.Reveal
  color: $primary-text
  &-header
    display: inline-block
    border-bottom: 1Px solid $accent-color
    color: $accent-color
  &-list
    margin-bottom: $spacer-regular
    padding-left: $spacer-md
    list-style-type: circle
  &-footer
    margin-top: $spacer-regular
    padding-top: $spacer-regular
    border-top: 1Px solid $greyLighten
    color: $secondary-text
    font-style: italic
    font-size: $text-md
  &-iconContainer
    float: right
    cursor: pointer